          </div>
              <button class="btn btn-outline-light my-2 my-sm-0" type="submit">LOG OUT</button>
              <button class="btn btn-outline-light my-2 my-sm-0" type="submit">ESTADO</button>
      </nav>

      <div class="card mb-3 card-publicidad container-publicidad">
          <div class="col-md-9 mb-4 mt-4">
            <%= form_for :listar_estacionamientos, :url => {:controller => "listar", :action => "estacionamientos_get"}, :method => :get, :html => { :class => "form-horizontal validation " , :id => "form_estacionamiento"}  do |f| %>
            <div class="form-group">
            <div class="col-md-9  col-sm-12">
                <div class="col-md-12 mb-4">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="Buscar por nombre " name="nombre">
                <input type="submit" value="Buscar"/>
                    </div>
                  </div>
                </div>
            </div>
        </div>
      </div>
        <% end %>
        <table class="table table-striped table-bordered table-hover dataTables-example" id="tablaUsuarios">
          <thead>
            <tr>
          <th>id</th>
          <th>nombre</th>
          <th>direccion</th>
          <th>ubicacion</th>
      </tr>
  </thead>
  <tbody>
      <% if @estacionamientos != nil && @estacionamientos != ""

          @estacionamientos.each do |p| %>
      <tr class="gradeU">
        <td><%=p.id %></td>
        <td><%=p.nombre %></td>
        <td><%=p.direccion %></td>
        <td><%=p.ubicacion %></td>
      </tr>
      <% end end %>
  </tbody>
</table>
